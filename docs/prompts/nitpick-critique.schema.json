{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MiniPhi nitpick critique",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "task",
    "role",
    "critique",
    "revision_plan",
    "summary",
    "needs_more_context",
    "missing_snippets",
    "stop_reason"
  ],
  "properties": {
    "schema_version": { "type": "string" },
    "task": { "type": "string" },
    "role": { "type": "string", "enum": ["critic"] },
    "critique": { "type": "array", "items": { "type": "string" } },
    "revision_plan": { "type": "array", "items": { "type": "string" } },
    "missing_facts": { "type": "array", "items": { "type": "string" } },
    "queries": { "type": "array", "items": { "type": "string" } },
    "summary": { "type": "string" },
    "needs_more_context": { "type": "boolean" },
    "missing_snippets": { "type": "array", "items": { "type": "string" } },
    "stop_reason": { "type": "string" },
    "stop_reason_code": { "type": ["string", "null"] },
    "stop_reason_detail": { "type": ["string", "null"] }
  }
}
