{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MiniPhi nitpick research plan",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "task",
    "outline",
    "queries",
    "facts_needed",
    "drafting_plan",
    "needs_more_context",
    "missing_snippets",
    "stop_reason"
  ],
  "properties": {
    "schema_version": { "type": "string" },
    "task": { "type": "string" },
    "outline": { "type": "array", "items": { "type": "string" } },
    "queries": { "type": "array", "items": { "type": "string" } },
    "facts_needed": { "type": "array", "items": { "type": "string" } },
    "drafting_plan": { "type": "array", "items": { "type": "string" } },
    "tone": { "type": "string" },
    "target_word_count": { "type": "integer", "minimum": 100 },
    "constraints": { "type": "array", "items": { "type": "string" } },
    "summary": { "type": "string" },
    "needs_more_context": { "type": "boolean" },
    "missing_snippets": { "type": "array", "items": { "type": "string" } },
    "stop_reason": { "type": "string" },
    "stop_reason_code": { "type": ["string", "null"] },
    "stop_reason_detail": { "type": ["string", "null"] }
  }
}
