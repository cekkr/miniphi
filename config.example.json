{
  "lmStudio": {
    "clientOptions": {
      "baseUrl": "ws://127.0.0.1:1234"
    },
    "rest": {
      "baseUrl": "http://127.0.0.1:1234"
    },
    "prompt": {
      "timeoutSeconds": 45,
      "noTokenTimeoutSeconds": 600
    }
  },
  "defaults": {
    "task": "Provide a precise technical analysis of the captured output.",
    "contextLength": 32768,
    "gpu": "auto",
    "timeoutSeconds": 60,
    "summaryLevels": 3,
    "chunkSize": 2000,
    "sessionTimeoutSeconds": 1800
  },
  "resourceMonitor": {
    "maxMemoryPercent": 85,
    "maxCpuPercent": 90,
    "maxVramPercent": 80,
    "sampleIntervalMs": 5000
  },
  "pythonScript": "./log_summarizer.py"
}
